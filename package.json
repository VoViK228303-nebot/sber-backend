{
  "name": "sber-bank-online",
  "version": "1.0.0",
  "description": "Банковское приложение в стиле СберБанк Онлайн",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "clean": "turbo run clean && rm -rf node_modules",
    "setup": "bash scripts/setup.sh",
    "setup:win": "scripts\\setup.bat",
    "db:up": "docker-compose up -d postgres redis",
    "db:down": "docker-compose down",
    "db:reset": "bash scripts/reset-db.sh",
    "db:reset:win": "scripts\\reset-db.bat",
    "db:migrate": "cd apps/api && npx prisma migrate dev",
    "db:generate": "cd apps/api && npx prisma generate",
    "db:seed": "cd apps/api && npx prisma db seed",
    "db:studio": "cd apps/api && npx prisma studio"
  },
  "devDependencies": {
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "npm@10.0.0"
}